security:
    encoders:
        Perform\BaseBundle\Entity\User:
            algorithm: bcrypt
    providers:
        perform_bundles:
            entity:
                class: Perform\BaseBundle\Entity\User
                property: email

    firewalls:
        dev:
            pattern: ^/(_(profiler|wdt)|css|images|js)/
            security: false
        main:
            pattern: ^/admin
            anonymous: ~
            form_login:
                login_path: perform_base_login
                check_path: perform_base_login
                csrf_token_generator: security.csrf.token_manager
            logout:
                path: perform_base_logout
                target: /

    access_control:
        - { path: ^/admin/login, roles: IS_AUTHENTICATED_ANONYMOUSLY }
        - { path: ^/admin/, role: ROLE_USER }
